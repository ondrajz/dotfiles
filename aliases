# aliases
alias D='cd ~/Downloads'
alias P='cd ~/Projects'
alias W='cd ~/Work'

alias c='command'
alias e='env | sort'
alias h='history'
alias i='which'
alias l='ls --color -1hGBF --group-directories-first'
alias m='make'
alias p='command ping -O'
alias t='tail -f'

# defaults
alias cp='cp -vi'
alias mv='mv -vi'
alias rm='rm -vI'
alias ln='ln -vi'
alias ls='ls -hB --color'
alias mkdir='mkdir -v'
alias grep='grep --color=always -sI --exclude-dir={.bzr,CVS,.git,.hg,.svn,Trash,.cache,.directory_history} --exclude="*~" -D skip'
alias ip='ip -c'
alias watch='watch -c'

# shortcuts
alias la='/bin/ls --color -la'
alias lb='ls -lB'
alias ll='ls -lB'
alias lt='ls -lB --sort=time -rog'
alias dud='du -d 1 -h'
alias duf='du -sh * | sort -h'
alias fd='find . -type d -name'
alias ff='find . -type f -name'
alias wh='which -a'
alias tt='tree -d -C -L 5'
alias ipa='ip -c -br addr show'
alias dcp='docker compose'
alias clipjs='clipout | jq .'

# handy
alias cliplines='clipout | wc -l'
alias clipchars='clipout | wc -c'
alias fuck='sudo $(history -p \!\!)'
alias hgrep='fc -El 0 | grep'
alias rgrep='grep -R -n -H -C 5 '
alias cutcol='cut -c1-$COLUMNS'
alias wgeto='wget -q -O -'
alias myown='sudo chown -Rc $(id -un):$(id -gn) .'
alias clipin='xclip -in -selection clipboard'
alias clipout='xclip -out -selection clipboard'
alias rec='asciinema rec'
alias ports='sudo netstat -nltp'
alias pst='pstree -p -T'
alias lsnet='lsns -t net'
alias lspid='lsns -t pid'
alias golatest='curl -sL https://golang.org/dl/ | command grep -oP "go[0-9]+\.[0-9]+\.[0-9]+" | uniq | head -n2'
alias gitss='git diff --cached --diff-filter=A --name-only -z | xargs -0 du -ch | sort -h'

# other
alias snmpget='snmpget -v 2c -c public'
alias snmpset='snmpset -v 2c -c public'
alias snmpwalk='snmpwalk -v 2c -c public'

alias curljson='curl -H "Accept: application/json" -H "Content-Type: application/json"'
alias curljp='curljson -X POST'
alias curljg='curljson -X GET'

alias dotsvg='dot -Tsvg > /tmp/tempdot.svg && exo-open /tmp/tempdot.svg'
alias dotpng='dot -Tpng > /tmp/tempdot.png && exo-open /tmp/tempdot.png'

alias install='sudo apt install -y'
alias purge='sudo apt purge -y'
alias update='sudo apt update'
alias upgrade='sudo apt upgrade && sudo apt autoremove'

alias goget='go get -v'
alias gobuild='go build -v'
alias gosloccount='find . -path ./vendor -prune -o -name "*.go" -print0 | xargs -0 wc -l'

alias termbin='nc termbin.com 9999'

alias myip='wget http://ipinfo.io/ip -qO -'

if [ -n "$ZSH_VERSION" ]; then
    # zsh is able to auto-do some kungfoo
    # depends on the SUFFIX :)
    if is-at-least 4.2.0; then
      # open browser on urls
      _browser_fts=(htm html de org net com at cx nl se dk dk php)
      for ft in $_browser_fts ; do alias -s $ft=$BROWSER ; done

      _editor_fts=(cpp cxx cc c hh h inl asc txt TXT tex)
      for ft in $_editor_fts ; do alias -s $ft=$EDITOR ; done

      _image_fts=(jpg jpeg png gif mng tiff tif xpm)
      for ft in $_image_fts ; do alias -s $ft=$XIVIEWER; done

      _media_fts=(ape avi flv mkv mov mp3 mpeg mpg ogg ogm rm wav webm)
      for ft in $_media_fts ; do alias -s $ft=mplayer ; done

      #read documents
      alias -s pdf=acroread
      alias -s ps=gv
      alias -s dvi=xdvi
      alias -s chm=xchm
      alias -s djvu=djview

      #list whats inside packed file
      alias -s zip="unzip -l"
      alias -s rar="unrar l"
      alias -s tar="tar tf"
      alias -s tar.gz="echo "
      alias -s ace="unace l"
    fi
fi
